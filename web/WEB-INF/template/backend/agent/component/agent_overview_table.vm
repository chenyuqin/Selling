<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" id-target="agent-management">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h1><i class="fa fa-home"></i> 代理概览 </h1>
            <ol class="breadcrumb">
                <li><a href="${path.concat('/dashboard')}">首页</a></li>
                <li><a data-toggle="collapse" data-parent="#accordion" href="#agent-management">代理管理</a></li>
                <li class="active">代理概览</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <table id="overview_agent_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#overview_agent_table").DataTable({
            searching: false,
            ordering: false,
            paging: true,
            "sPaginationType": "full_numbers",
            "bPaginate": false,
            "bLengthChange": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/agent/overview')}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
            },
            "fnInitComplete": function () {
                $("#overview_agent_table").removeClass('no-footer');
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "姓名", "mData": "name"},
                {
                    title: "姓名", "mRender": function (data, type, full) {
                    var operation = "<a href='${path.concat('/agent/detail/')}" + full.agentId + "'>"+full.name+"</a>";
                    return operation;
                }
                },
                {title: "手机", "mData": "phone"},
                {
                    title: "注册时间", "mRender": function (data, type, full) {
                    return ((new Date(full.createAt)).format("yyyy/MM/dd hh:mm"));
                }
                },
                {
                    title: "审核状态", "mRender": function (data, type, full) {
                    var operation = "";
                    if (full.granted == true) {
                        operation += "已审核通过";
                    } else {
                        operation += "审核未通过";
                    }
                    return operation;
                }
                },
                {
                    title: "顾客", "mRender": function (data, type, full) {
                    var url = "${path.concat('/agent/statistics/')}" + full.agentId;
                    var option = "";
                    $.ajax({
                        type: "post",
                        url: url,
                        async: false,
                        success: function (result) {
                            var customerNum = "<a href='${path.concat('/customer/overview/')}" + full.agentId + "'>"+result.data.customerNum+"</a>";
                            option += customerNum;
                        }
                    });
                    return option;
                }
                },
                {
                    title: "下级代理商", "mRender": function (data, type, full) {
                    var url = "${path.concat('/agent/statistics/')}" + full.agentId;
                    var option = "";
                    $.ajax({
                        type: "post",
                        url: url,
                        async: false,
                        success: function (result) {
                            var agentNum = "<a href='#'>"+result.data.agentNum+"</a>";
                            option += agentNum;
                        }
                    });
                    return option;
                }
                },
                {
                    title: "操作", "mRender": function (data, type, full) {
                    var operation = "";
                    var url="${path.concat('/agent/forbid/')}" + full.agentId;
                    var limit_button = "<button type='button' class='btn btn-warning btn-group-sm' onclick=\"javascript:location.href='" + url + "'\">禁用</button>&nbsp;"
                    operation += limit_button;
                    return operation;
                }
                }
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "当前暂无审核通过的代理",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });
    });
</script>