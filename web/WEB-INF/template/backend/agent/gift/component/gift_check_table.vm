<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" id-target="agent-management">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h1><i class="fa fa-home"></i> 赠送申请 </h1>
            <ol class="breadcrumb">
                <li><a href="${path.concat('/dashboard')}">首页</a></li>
                <li><a data-toggle="collapse" data-parent="#accordion" href="#agent-management">代理管理</a></li>
                <li class="active">赠送申请</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <table id="check_gift_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
            </table>

        </div>
    </div>
</div>
#parse("/backend/agent/gift/component/gift_detail_modal.vm")
#parse("/backend/agent/gift/component/reject_modal.vm")
<script>
    $(document).ready(function () {
        $("#check_gift_table").DataTable({
            searching: false,
            ordering: false,
            paging: true,
            "sPaginationType": "full_numbers",
            "bPaginate": true,
            "bLengthChange": true,
            "bAutoWidth": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/gift/check')}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
            },
            "fnInitComplete": function () {
                $("#check_gift_table").removeClass('no-footer');
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "姓名", "mData": "agent.name"},
                {title: "赠送商品", "mData": "goods.name"},
                {
                    title: "意向人数/申请盒数", "mRender": function (data, type, full) {
                        var  quantity= full.potential+"/"+full.line;
                        return quantity;
                    }
                },
                {
                    title: "申请时间", "mRender": function (data, type, full) {
                        return ((new Date(full.createAt)).format("yyyy/MM/dd"));
                    }
                },
                {
                    title: "操作", "mRender": function (data, type, full) {
                    var operation = "";
                    var detail_btn = "<button type='button' class='btn btn-info btn-group-sm' id='" + full.applyId + "' onclick=detail(this) data-toggle='modal' data-target='#gift_detail_modal'>赠送</button>&nbsp;"
                    operation += detail_btn;
                    var reject_btn = "<button type='button' class='btn btn-warning btn-group-sm' id='" + full.applyId + "' onclick=reject(this) data-toggle='modal' data-target='#reject_modal'>回绝</button>&nbsp;"
                    operation += reject_btn;
                    return operation;
                }
                }
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "当前没有赠送申请",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });

    });
    
    function detail(obj){
        var applyId=obj.id;
        if(applyId){
            var url="${path.concat('/gift/apply/')}"+applyId;
            $.get(url,function(result){
               if(result.responseCode=="RESPONSE_OK"){
                    $("#apply_gift_id").text(applyId);
                    $("#agent_name").text(result.data.agent.name);
                    $("#goods_name").text(result.data.goods.name);
                    $("#potential").text(result.data.potential);
                    $("#line").text(result.data.line);
                    $("#last_quantity").text(result.data.last);
                    $("#total_quantity").text(result.data.total);
                    $("#apply_time").text((new Date(result.data.createAt)).format("yyyy/MM/dd"));
                }else{
                    alert(result.description);
                } 
            });
        }else{
            alert("不存在该赠送申请!");
        }
    }
        
    function reject(obj){
        var applyId=obj.id;
        $("#apply_id").text(applyId);
    }
</script>