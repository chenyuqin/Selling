<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" id-target="admin-management">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h1><i class="fa fa-home"></i> 账号管理 </h1>
            <ol class="breadcrumb">
                <li><a href="${path.concat('/dashboard')}">首页</a></li>
                <li><a data-toggle="collapse" data-parent="#accordion" href="#admin-management">管理员管理</a></li>
                <li class="active">账号管理</li>
            </ol>
        </div>
    </div>
     <div class="row">
        <div class="col-md-12 col-lg-12">
            <table id="admin_overview_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
            </table>

        </div>
    </div>
</div>
<div class="modal fade" id="dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">
               提示
            </h4>
         </div>
         <div class="modal-body">

         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
               取消
            </button>
            <button type="button" class="btn btn-primary" id="dialogConfirm">
               确定
            </button>
         </div>
   </div>
</div>
<script>
   
    var adminId;
    $("#dialog").find("#dialogConfirm").click(function(){
    	   
    	   var url="${path.concat('/delete/')}"+adminId;
    	   $.post(url, function (result) {
    	      var responseCode=result.responseCode;	    
    	      if(responseCode=="RESPONSE_NULL"){  
    	          BootstrapDialog.alert('当前系统中只有一个管理员账号，不能删除!');
    	      }else{
    	         $("#tr"+adminId).remove();
    	      }   	
    	  });
    	  $("#dialog").modal('hide');
    });
    
    function deleteAdmin(obj){
       $("#dialog").find(".modal-body").html("确定删除这个管理员账号吗！");
       $("#dialog").modal('show');  
       adminId=obj.id;  
    }

    
    $(document).ready(function () {
          $("#admin_overview_table").DataTable({
            searching: false,
            ordering: false,
            paging: true,
            "sPaginationType": "full_numbers",
            "bPaginate": false,
            "bLengthChange": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/admin/overview')}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
            },
            "fnInitComplete": function () {
                $("#check_agent_table").removeClass('no-footer');
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "账号", "mData": "username"},
                {title: "密码", "mData": "password"},
                {title: "角色", "mData": "role.description"},  
                {
                    title: "操作", "mRender": function (data, type, full) {
                       var operation = "";
                       var item_url = "${path.concat('/admin/')}" ;
                       var modifyButton="<button type='button' class='btn btn-success' onclick=\"javascript:location.href='" + item_url + "'\">修改密码</button>&nbsp;&nbsp;&nbsp;&nbsp;";
                       operation+=modifyButton;
                       var deleteButton="<button type='button' class='btn btn-danger' id='" + admin.adminId + "' onclick='deleteAdmin(this)'>删除</button>";
                       operation+=deleteButton;
                       return operation;
                    }
                }
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "当前没有数据",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });
    });
    

   
</script>