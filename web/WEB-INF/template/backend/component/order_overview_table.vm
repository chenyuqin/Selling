<script>
    var url = "${path.concat('/order/overview')}";
    var payed_start = 0;
    var submited_start=0;
    var finish_start=0;
    var length= 5;  
    var payed_params={"status":2};
    var submited_params={"status":1};
    var finish_params={"status":5};
    var payed_order_total=0;
    var submited_order_total=0;
    var finish_order_total=0;
    $(document).ready(function () {
        $.post(url, {
            start : payed_start,
            length :length,
            params :payed_params,
        }, function (result) {
            payed_order_total=result.total;
            var orderList=result.data;   
            if(payed_order_total<length){
               length=payed_order_total;
            }
            var node1="<table id='payed_order_table' class='table table-striped table-bordered' cellspacing='0' width='100%'><tr><th>订单号</th><th>代理商姓名</th><th>生成时间</th><th>订单状态</th><th>操作</th></tr>";                     
            for (var i = 0; i < length; i++) {  
                var order= orderList[i]; 
                if(order.status=="PAYED"){
                    var status="已付款未发货";
                }else if(order.status=="PATIAL_SHIPMENT"){
                    var status="部分发货";
                }else{
                    var status="完全发货";
                }
                var date=(new Date(order.createAt)).format("yyyy/MM/dd hh:mm");
                node1+="<tr><td>" +order.orderId+ "</td><td>" +order.agent.name+ "</td><td>" +date+ "</td><td>" +status+ "</td><td><button type='button' class='btn btn-success'>详情</button></td></tr>";  
            } 
            $("#overview_order").append(node1);
            payed_order_total-=length;
            if(payed_order_total>0){
                 var node2="<button type='button' class='btn btn-success' id='loadPayedMore' onclick=loadPayedTable(this)>加载更多</button>";
                 $("#overview_order").append(node2);
            }                      
        });
        
        
       
     
    });
    
    $(function () {
        $("#agent-management").collapse('hide');
        $("#order-management").collapse('show');
        $("#customer-management").collapse('hide');
        $("#goods-management").collapse('hide');
        $("#statement-management").collapse('hide');
    });
</script>
