<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" id-target="config-management">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h1><i class="fa fa-home"></i> 返现配置 </h1>
            <ol class="breadcrumb">
                <li><a href="${path.concat('/dashboard')}">首页</a></li>
                <li><a data-toggle="collapse" data-parent="#accordion" href="#config-management">基本配置</a></li>
                <li class="active">返现配置</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <table id="config_overview_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
            </table>
        </div>
    </div>
</div>
#parse("/backend/refund/component/config_modal.vm")
<script>
    $(document).ready(function () {
        $("#config_overview_table").DataTable({
            searching: false,
            ordering: false,
            paging: true,
            "sPaginationType": "full_numbers",
            "bPaginate": true,
            "bLengthChange": true,
            "bAutoWidth": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/commodity/overview')}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
                return nRow;
            },
            "fnInitComplete": function () {
                $("#config_overview_table").removeClass('no-footer');
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "商品名称", "mData": "name"},
                {title: "代理价格", "mData": "agentPrice"},
                {
                    title: "描述", "mData": "description"
                },
                {
                    title: "当前配置(件)", "mRender": function (data, type, full) {
                    var url = "${path.concat('/refund/config/goods/')}" + full.goodsId;
                    var option = "";
                    $.ajax({
                        type: "get",
                        url: url,
                        async: false,
                        success: function (result) {
                            var config = result.data;
                            if (result.responseCode == "RESPONSE_OK") {
                                option += config.amountTrigger;
                            } else {
                                option += "暂未配置";
                            }
                        }
                    });
                    return option;
                }
                },
                {
                    title: "自己返现(元/件)", "mRender": function (data, type, full) {
                    var url = "${path.concat('/refund/config/goods/')}" + full.goodsId;
                    var option = "";
                    $.ajax({
                        type: "get",
                        url: url,
                        async: false,
                        success: function (result) {
                            var config = result.data;
                            if (result.responseCode == "RESPONSE_OK") {
                                option += config.level1Percent;
                            } else {
                                option += "暂未配置";
                            }
                        }
                    });
                    return option;
                }
                },
                {
                    title: "直接关联返现(元/件)", "mRender": function (data, type, full) {
                    var url = "${path.concat('/refund/config/goods/')}" + full.goodsId;
                    var option = "";
                    $.ajax({
                        type: "get",
                        url: url,
                        async: false,
                        success: function (result) {
                            var config = result.data;
                            if (result.responseCode == "RESPONSE_OK") {
                                option += config.level2Percent;
                            } else {
                                option += "暂未配置";
                            }
                        }
                    });
                    return option;
                }
                },
                {
                    title: "间接关联返现(元/件)", "mRender": function (data, type, full) {
                    var url = "${path.concat('/refund/config/goods/')}" + full.goodsId;
                    var option = "";
                    $.ajax({
                        type: "get",
                        url: url,
                        async: false,
                        success: function (result) {
                            var config = result.data;
                            if (result.responseCode == "RESPONSE_OK") {
                                option += config.level3Percent;
                            } else {
                                option += "暂未配置";
                            }
                        }
                    });
                    return option;
                }
                },
                {
                    title: "月份配置(个月)", "mRender": function (data, type, full) {
                    var url = "${path.concat('/refund/config/goods/')}" + full.goodsId;
                    var option = "";
                    $.ajax({
                        type: "get",
                        url: url,
                        async: false,
                        success: function (result) {
                            var config = result.data;
                            if (result.responseCode == "RESPONSE_OK") {
                                option += config.monthConfig;
                            } else {
                                option += "暂未配置";
                            }
                        }
                    });
                    return option;
                }
                },
                {
                    title: "操作", "mRender": function (data, type, full) {
                    var operation = "";
                    var edit_url = "${path.concat('/commodity/edit/')}" + full.goodsId;
                    var update_button = "<button type='button' class='btn btn-success btn-group-sm' id='" + full.goodsId + "' data-toggle='modal' data-target='#config_modal'>修改</button>&nbsp;"
                    operation += update_button;
                    $("#" + full.goodsId).on('click', function () {
                        var goodsId = full.goodsId;
                        $("#goods_id").val(goodsId);
                        var goodsname = full.name;
                        $("#goods_name").text(goodsname);
                        var goodsprice = full.agentPrice;
                        $("#goods_price").text(goodsprice + "元");
                        var url = "${path.concat('/refund/config/goods/')}" + full.goodsId;
                        $.ajax({
                            type: "get",
                            url: url,
                            async: true,
                            success: function (result) {
                                var config = result.data;
                                if (result.responseCode == "RESPONSE_OK") {                               	
                                    $("#config_trigger").val(config.amountTrigger);
                                    $("#config_percent_1").val(config.level1Percent);
                                    $("#config_percent_2").val(config.level2Percent);
                                    $("#config_percent_3").val(config.level3Percent);
                                    $("#month_config").val(config.monthConfig);
                                }else{
                                    $("#config_trigger").val(0);
                                    $("#config_percent_1").val(0);
                                    $("#config_percent_2").val(0);
                                    $("#config_percent_3").val(0);
                                    $("#month_config").val(1);
                                }
                            }
                        });
                    });

                    return operation;
                }
                }
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "没有商品可供配置",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });


    });
</script>