<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" id-target="statement-management">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h1><i class="fa fa-home"></i> 返现记录 </h1>
            <ol class="breadcrumb">
                <li><a href="${path.concat('/dashboard')}">首页</a></li>
                <li><a data-toggle="collapse" data-parent="#accordion" href="#statement-management">返现管理</a></li>
                <li class="active">返现记录</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <table id="refund_record_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#refund_record_table").DataTable({
            searching: true,
            ordering: false,
            paging: true,
            "sPaginationType": "full_numbers",
            "bPaginate": true,
            "bLengthChange": true,
            "bAutoWidth": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/refund/record/overview')}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
                return nRow;
            },
            "fnInitComplete": function () {
                $("#config_overview_table").removeClass('no-footer');
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "编号", "mData": "refundRecordId"},
                {title: "代理商", "mData": "agent.name"},
                {title: "商品", "mData": "orderPool.goods.name"},
                {
                    title: "日期", "mRender": function (data, type, full) {
                    return ((new Date(full.createAt)).format("yyyy/MM/dd"));
                }
                },
                {title: "返现金额(元)", "mData": "refundAmount"},
                {title: "返现比例(元／件)", "mData": "refundPercent"},
                {title: "内容", "mData": "refundDescription"}
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "没有返现记录",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });
    });
</script>