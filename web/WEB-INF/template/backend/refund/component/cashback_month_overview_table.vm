<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" id-target="statement-management">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h1><i class="fa fa-home"></i> 本月预期返现 </h1>
            <ol class="breadcrumb">
                <li><a href="${path.concat('/dashboard')}">首页</a></li>
                <li><a data-toggle="collapse" data-parent="#accordion" href="#statement-management">返现管理</a></li>
                <li class="active">本月预期返现</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <button type="button" id="produce" class="btn btn-primary btn-success" data-toggle="modal" data-target="#download_modal">本月返现报表下载</button>
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <table id="refund_record_month_table" class="table table-striped table-bordered" cellspacing="0"
                   width="100%">
            </table>
        </div>
    </div>
</div>
<div id="download_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
                <h4 class="download_loading">正在生成返现报表，请耐心等待</h4>
                <h4 class="download_success">本月返现报表生成成功，请点击下载按钮进行下载</h4>
                <h4 class="download_failed">对不起，本月暂无返现报表！</h4>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default datetime_btn download_success" data-dismiss="modal">取消</button>
                <button id="download" class="btn btn-primary download_success" data-dismiss="modal">下载</button>
                <button class="btn btn-primary download_failed" data-dismiss="modal">确定</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#refund_record_month_table").DataTable({
            searching: false,
            ordering: false,
            paging: true,
            "sPaginationType": "full_numbers",
            "bPaginate": true,
            "bLengthChange": true,
            "bAutoWidth": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/cashback/month')}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
                return nRow;
            },
            "fnInitComplete": function () {
                $("#config_overview_table").removeClass('no-footer');
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "代理商", "mData": "agent.name"},
                {title: "月份", "mData": "month"},
                {title: "返现金额(元)", "mData": "amount"},
                {
                    title: "明细(自销/直接/间接)", "mRender": function (data, type, full) {
                    var detail = full.self + "/" + full.direct + "/" + full.indirect;
                    return detail;
                }
                },
                {
                    title: "操作", "mRender": function (data, type, full) {
                    var operation = "";
                    var url = "${path.concat('/cashback')}" + "/" + full.agent.agentId + "/month"
                    var detail_btn = "<a type='button' class='btn btn-info btn-group-sm' href='" + url + "'>详情</a>&nbsp;"
                    operation += detail_btn;
                    return operation;
                }
                }
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "暂无需要处理的预期返现",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });
    });
    
     $("#produce").click(function(){
        var url = "${path.concat('/cashback/produce')}";
        $.post(url,function(){
            if (result.responseCode != "RESPONSE_OK") {
                $('.download_loading').hide();
                $('.download_failed').show();
            } else {
                $('.download_loading').hide();
                $('.download_success').show();
            }
        });
    });
    
    ##$("#download").click(function(){
    ##    var url = "${path.concat('')}";
    ##    window.location.href = url;
    ##});
    
    $("#download_modal").on("show.bs.modal",function(){
        $('.download_loading').show();
        $('.download_failed').hide();
        $('.download_success').hide();
    });
    
    $("#download_modal").on("hidden.bs.modal",function(){
        $('.download_loading').hide();
        $('.download_failed').hide();
        $('.download_success').hide();
    });
</script>