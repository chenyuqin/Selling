                    <p class="form-group">
                      <text id="wishes"></text>
                    </p>
               </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="confirm">确认</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $("#application_detail_modal").modal({
            show: false,
            keyboard: true
        });
    });

