<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" id-target="customer-management">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h1><i class="fa fa-home"></i> 客户详情 </h1>
            <ol class="breadcrumb">
                <li><a href="${path.concat('/dashboard')}">首页</a></li>
                <li><a data-toggle="collapse" data-parent="#accordion" href="#customer-management">客户管理</a></li>
                <li class="active">客户详情</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            代理商姓名： ${agent.name}
            <hr>
            #foreach($address in ${addressList})
                $address.address
            #end
            <hr>	
            #foreach($phone in ${phoneList})
                $phone.phone
            #end
            <hr>
            #foreach($orderItem in ${orderItemList})
                 $orderItem.goods.name
                 $orderItem.goodsQuantity
                 $orderItem.orderItemPrice	
                 <br>
            #end
        </div>
    </div>
</div>