<div class="ui stackable padded grid" name="cashback_overview">
    <div class="row">
        <h1 class="ui header">
            <i class="home icon"></i>
            <div class="content">
            返现配置
                <div class="sub header">
                        <div class="ui breadcrumb">
                            <a class="section">返现管理</a>
                            <div class="divider">/</div>
						    <a class="section">返现概览</a>
                            <div class="divider">/</div>

                            <a class="active section">返现配置</a>
                        </div>
                 </div>
            </div>
          </h1>
    </div>
    <div class="row">
            <table id="config_overview_table" class="ui striped table" cellspacing="0" width="100%">
            </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#config_overview_table").DataTable({
            searching: false,
            ordering: false,
            paging: true,
            "sPaginationType": "full_numbers",
            "bPaginate": true,
            "bLengthChange": true,
            "bAutoWidth": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/commodity/overview')}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
                return nRow;
            },
            "fnInitComplete": function () {
                $("#config_overview_table").removeClass('no-footer');
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "商品名称", "mData": "name"},
                {title: "代理价格", "mData": "agentPrice"},
                {
                    title: "描述", "mData": "description"
                },
     
                {
                    title: "操作", "mRender": function (data, type, full) {
                    var operation = "";
                    var url = "${path.concat('/cashback/config/list/goods/')}" + full.goodsId;
                    var button = "<button  class='ui positive basic button' id='" + full.goodsId + "'>返现配置列表</button>&nbsp;"
                    operation += button;
                    $("#" + full.goodsId).on('click', function () {
                        window.location.href=url;
                    });

                    return operation;
                }
                }
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "没有商品可供配置",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });


    });
</script>