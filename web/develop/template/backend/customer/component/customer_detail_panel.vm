<div class="ui stackable padded grid" name="customer_overview">
    <div class="row">
        <h1 class="ui header">
            <i class="home icon"></i>
            <div class="content">
                客户详情
                <div class="sub header">
                    <div class="ui breadcrumb">
                        <a class="section">顾客管理</a>
                        <div class="divider">/</div>
                        <a class="section">客户概览</a>
                        <div class="divider">/</div>
                        <a class="active section">客户详情</a>
                    </div>
                </div>
            </div>
        </h1>
    </div>
    <div class="row">
        <div class="column">
            <div class="ui segment">
                <div class="ui divided items">
                    <div id="personal_info" class="item">
                        <div class="content">
                            <div class="floated_div">
                                <div class="ui left floated header">
                                    #if(${customer.gender}=="M")
                                        <i class="blue male icon"></i>
                                    #else
                                        <i class="pink female icon"></i>
                                    #end
                                    <div class="content">${customer.name}
                                        <div id="agent_div" class="ui blue tag label">
                                            代理商
                                            #if(${customer.agent})
                                                <div id="agent" class="detail">${customer.agent.name}</div>
                                            #else
                                                <div id="agent" class="detail">无</div>
                                            #end
                                        </div>
                                    </div>
                                </div>
                                <div class="ui right floated header">
                                    #if(${customer.transformed}==1)
                                        <div class="ui label">已变成代理商</div>
                                    #end
                                </div>
                            </div>
                            <div class="ui very relax list">
                                <div class="item">
                                    <i class="blue mobile icon"></i>${customer.phone}
                                </div>
                                <div id="wechat" class="item">
                                </div>
                                <div class="item">
                                    <i class="brown home icon"></i>${customer.address}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="content">
                            <div id="sales_area" class="ui large teal ribbon label">购买情况</div>
                            <div class="content">
                                #parse("/backend/common/datetimepicker.vm")
                            </div>
                            <div class="description">
                                <div class="ui segments">
                                    <div class="ui segment">
                                        <h4>代理订单</h4>
                                    </div>
                                    <div class="ui segment" id="orderItem_list">
                                        <div class="row">
                                            <div class="column">
                                                <button class="ui button primary orderItem_status" target-value="PAYED">已付款</button>
                                                <button class="ui button orderItem_status" target-value="NOT_PAYED">未付款</button>
                                                <button class="ui button orderItem_status" target-value="SENT">已发货</button>
                                                <button class="ui button orderItem_status" target-value="RECEIVED">已签收</button>
                                                <button class="ui button orderItem_status" target-value="REFUNDING">退款中</button>
                                                <button class="ui button orderItem_status" target-value="REFUNDED">已退款</button>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="column">
                                                <table id="orderItem_list_table" class="ui tablet stackable table"></table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="ui segments">
                                    <div class="ui segment">
                                        <h4>自助订单</h4>
                                    </div>
                                    <div class="ui segment" id="customerOrder_list">
                                        <div class="row">
                                            <div class="column">
                                                <button class="ui button primary customerOrder_status" target-value="PAYED">已付款</button>
                                                <button class="ui button customerOrder_status" target-value="NOT_PAYED">未付款</button>
                                                <button class="ui button customerOrder_status" target-value="SENT">已发货</button>
                                                <button class="ui button customerOrder_status" target-value="RECEIVED">已签收</button>
                                                <button class="ui button customerOrder_status" target-value="REFUNDING">退款中</button>
                                                <button class="ui button customerOrder_status" target-value="REFUNDED">已退款</button>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="column">
                                                <table id="customerOrder_list_table" class="ui tablet stackable table"></table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var starttime = "2016-01-01";
    var endtime = new Date();
    var start;
    var end;
    var table1;
    var table2;
    var orderItemValue="PAYED";
    var customerOrderValue="PAYED";
    var start_flatpickr, end_flatpickr;
    $(document).ready(function() {
        var wechat = "${customer.wechat}";
        if (wechat && wechat.slice(-1) != "}") {
            var new_wechat = wechat.replace(wechat.slice(7, -8), "***");
            var wechat_div="<i class='green wechat icon'></i>"+new_wechat;
            $("#wechat").append(wechat_div);
        } else {
            var no_wechat="<i class='green wechat icon'></i>无";
            $("#wechat").append(no_wechat);
        }

        start_flatpickr = $("#start_flatpickr").flatpickr({
            "locale": "zh",
            minDate: starttime,
            maxDate: endtime,
            onChange: function (selectedDates, dateStr, instance) {
                end_flatpickr.set("minDate", dateStr);
            },
        });

        end_flatpickr = $("#end_flatpickr").flatpickr({
            "locale": "zh",
            minDate: starttime,
            maxDate: endtime,
            onChange: function (selectedDates, dateStr, instance) {
                start_flatpickr.set("maxDate", dateStr);
            },
        });

        $(".orderItem_status").on('click', function () {
            orderItemValue = $(this).attr("target-value");
            $(".orderItem_status").each(function () {
                if ($(this).attr("target-value") == orderItemValue) {
                    $(this).attr("class", "ui primary button orderItem_status");
                } else {
                    $(this).attr("class", "ui button orderItem_status");
                }
            });
            table1.ajax.reload();
        });

        $(".customerOrder_status").on('click', function () {
            customerOrderValue = $(this).attr("target-value");
            $(".customerOrder_status").each(function () {
                if ($(this).attr("target-value") == customerOrderValue) {
                    $(this).attr("class", "ui primary button customerOrder_status");
                } else {
                    $(this).attr("class", "ui button customerOrder_status");
                }
            });
            table2.ajax.reload();
        });

        table1 = $("#orderItem_list_table").DataTable({
            searching: true,
            paging: true,
            aaSorting: false,
            "sPaginationType": "full_numbers",
            "bPaginate": true,
            "bLengthChange": true,
            "bAutoWidth": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/customer/orderItem/')}${customer.customerId}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
            },
            "fnInitComplete": function () {
                $("#overview_agent_table").removeClass('no-footer');
            },
            "fnServerParams": function (aoData) {
                var param = {};
                param["start"] = start;
                param["end"] = end;
                param["status"] = orderItemValue;
                aoData.push({"name": "params", "value": JSON.stringify(param)});
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "姓名", "mData": "customer.name"},
                {title: "购买商品", "mData": "goods.name"},
                {title: "购买数量", "mData": "goodsQuantity"},
                {title: "购买总额", "mData": "orderItemPrice"},
                {
                    title: "购买日期", "mRender": function (data, type, full) {
                    return ((new Date(full.createAt)).format("yyyy-MM-dd"));
                }
                },
                {
                    title: "代理商", "mRender": function (data, type, full) {
                    var agent="${customer.agent.name}";
                    return agent;
                }
                }
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "当前暂无数据",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });
       table2 = $("#customerOrder_list_table").DataTable({
            searching: true,
            paging: true,
            aaSorting: false,
            "sPaginationType": "full_numbers",
            "bPaginate": true,
            "bLengthChange": true,
            "bAutoWidth": true,
            "bSort": false,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/customer/customerOrder/')}${customer.customerId}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
            },
            "fnInitComplete": function () {
                $("#overview_agent_table").removeClass('no-footer');
            },
            "fnServerParams": function (aoData) {
                var param = {};
                param["start"] = start;
                param["end"] = end;
                param["status"] = customerOrderValue;
                aoData.push({"name": "params", "value": JSON.stringify(param)});
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {title: "姓名", "mData": "receiverName"},
                {title: "购买商品", "mData": "goods.name"},
                {title: "购买数量", "mData": "quantity"},
                {title: "购买总额", "mData": "totalPrice"},
                {
                    title: "购买日期", "mRender": function (data, type, full) {
                    return ((new Date(full.createAt)).format("yyyy-MM-dd"));
                }
                },
                {
                    title: "代理商", "mRender": function (data, type, full) {
                    var agent="${customer.agent.name}";
                    return agent;
                }
                }
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "当前暂无数据",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            }
        });
//        $('#orderItem_list').hide();
//        $('#customerOrder_list').hide();
    });

    $("#datetime_btn").click(function(){
        start = $("#start_time").val();
        end = $("#end_time").val();
        //查询
//        $('#orderItem_list').show();
//        $('#customerOrder_list').show();
        table1.ajax.reload();
        table2.ajax.reload();
//        start_flatpickr.clear();
//        end_flatpickr.clear();
    });
</script>