#if(${order.status} == 'PAYED' && ${order.orderId})
<script>
    $("#cancel_btn").on('click', function () {
        reimburse_inform();
        $("#reimburse_modal").modal('show');
    });
</script>
#end
#if(${order.status} == 'PAYED' || ${order.status} == 'SHIPPED')
    #parse("/backend/order/component/receive_order_modal.vm")
#end
#if(${order.status} == 'PAYED' || ${order.status} == 'SHIPPED')
<script>
    $("#receive_btn").on('click', function () {
        receive_inform();
        $("#receive_modal").modal('show');
    });
</script>
#end
#if(${order.status} == 'NOT_PAYED' && ${order.orderItemId})
    #parse("/backend/order/component/pay_order_modal.vm")
#end
#if(${order.status} == 'NOT_PAYED' && ${order.orderItemId})
<script>
    $("#pay_btn").on('click', function () {
        pay_inform();
        $("#pay_modal").modal('show');
    });
</script>
#end
<script>
    var order = eval(${order});
    var order_id = '';
    if (order.orderId != null && order.orderId != '') {
        order_id = order.orderId;
    } else if (order.orderItemId != null && order.orderItemId != '') {
        order_id = order.orderItemId;
    }

    $(document).ready(function () {
        if (order.status == 'RECEIVED' || order.status == 'SHIPPED') {
            if (order_id == '') return;
            var url = "${path.concat('/express/')}" + order_id + "/query";
            $.get(url, function (result) {
                if (result.responseCode != "RESPONSE_OK") {
                    $("#deliver_detail").hide();
                } else {
                    var content = eval('(' + result.data + ')');
                    if (content.data == null || content.data[0] == null || content.data[0].traces == null) {
                        $("#deliver_detail").hide();
                        return;
                    }
                    var traces = content.data[0].traces;
                    var list = $("<ol class='ui list'></ol>");
                    var item = "<li value='*'>物流单号: " + result.description + "</li>";
                    list.append(item);
                    for (var i = 0; i < traces.length; i++) {
                        var item = traces[i];
                        var item_component = "<li value='*'>[" + item.scanDate + "] " + item.desc + "</li>";
                        var list_item = $(item_component);
                        list.append(list_item);
                    }
                    $("#deliver_detail").append(list);
                    $("#deliver_detail").show();
                }
            });
        }
    });


    $("#cancel_btn").on('click', function () {
        reimburse_inform();
        $("#reimburse_modal").modal('show');
    });

    $("#receive_btn").on('click', function () {
        receive_inform();
        $("#receive_modal").modal('show');
    });

    $("#pay_btn").on('click', function () {
        pay_inform();
        $("#pay_modal").modal('show');
    });


</script>