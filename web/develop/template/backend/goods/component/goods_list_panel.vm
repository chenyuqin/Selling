<div class="ui stackable padded grid" name="goods_list">
    <div class="row">
        <h1 class="ui header">
            <i class="home icon"></i>
            <div class="content">商品列表
                <div class="sub header">
                    <div class="ui breadcrumb">
                        <a class="section">商品管理</a>

                        <div class="divider">/</div>
                        <a class="active section">商品列表</a>
                    </div>
                </div>
            </div>
        </h1>
    </div>
    <div class="row">
        <button type="button" class="ui blue basic button" id="create">添加商品</button>
    </div>
    <div class="row">
       <table id="goods_overview_table" class="ui tablet stackable table" cellspacing="0" width="100%">
       </table>
    </div>
</div>
#parse("/backend/goods/component/goods_create_modal.vm")
<script>
$(document).ready(function () {
    $("#goods_overview_table").DataTable({
        searching: false,
        ordering: false,
        paging: true,
        "sPaginationType": "full_numbers",
        "bPaginate": false,
        "bLengthChange": true,
        "bAutoWidth": true,
        "bSort": false,
        "bDeferRender": true,
        "bProcessing": true,
        "bServerSide": true,
        "bInfoFiltered": false,
        "sAjaxSource": '${path.concat('/commodity/overview')}',
        "infoFiltered": false,
        "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
            $(nRow).removeClass('dataTable');
            $(nRow).css("text-align", "left");
            return nRow;
        },
        "fnInitComplete": function () {
            $("#goods_overview_table").removeClass('no-footer');
        },
        "fnServerData": function (sSource, aoData, fnCallback) {
            $.ajax({
                "dataType": "json",
                "type": "POST",
                "url": sSource,
                "data": aoData,
                "success": fnCallback
            })
        },
        columns: [
            {title: "商品名称", "mData": "name"},
            {title: "商品原价", "mData": "customerPrice"},
            {title: "代理价格", "mData": "agentPrice"},
            {
                title: "描述", "mData": "description"
            },
            {
                title: "操作", "mRender": function (data, type, full) {
                var operation = "";
                var detail_button = "<button type='button' class='ui primary basic button' id='" + full.goodsId + "'>详情</button>&nbsp;"
                operation += detail_button;
                $("#" + full.goodsId).on('click', function () {
                    window.location.href = "${path.concat('/commodity/detail/')}" + full.goodsId;
                })
                return operation;
            }
            }
        ],
        "language": {
            "processing": "正在加载中",
            "lengthMenu": "每页显示 _MENU_ 条记录",
            "zeroRecords": "抱歉， 没有找到",
            "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
            "infoEmpty": "暂无数据",
            "infoFiltered": "数据表中共 _MAX_ 条记录)",
            "zeroRecords": "没有检索到数据",
            "search": "搜索:",
            "paginate": {
                "first": "首页",
                "previous": "上一页",
                "next": "下一页",
                "last": "尾页"
            }
        }
    });
});

$("#create").on('click', function() {
    $('#goods_create_modal').modal('show');
});
</script>