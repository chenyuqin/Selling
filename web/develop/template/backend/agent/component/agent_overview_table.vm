<div class="ui segment">
    <label class="ui header">代理排行</label>
    <table id="agent_overview_table" class="ui tablet stackable table"></table>
</div>
<script>
    $(document).ready(function () {
        $("#agent_overview_table").DataTable({
            searching: true,
            paging: true,
            aaSorting: [[0, "asc"]],
            "sPaginationType": "full_numbers",
            "bPaginate": true,
            "bLengthChange": true,
            "bAutoWidth": true,
            "bSort": true,
            "bDeferRender": true,
            "bProcessing": true,
            "bServerSide": true,
            "bInfoFiltered": false,
            "sAjaxSource": '${path.concat('/agent/kpi')}',
            "infoFiltered": false,
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $(nRow).removeClass('dataTable');
                $(nRow).css("text-align", "left");
            },
            "fnInitComplete": function () {
                $("#overview_agent_table").removeClass('no-footer');
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": "json",
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                })
            },
            columns: [
                {
                    title: "姓名", "mRender": function (data, type, full) {
                    var url = "${path.concat('/agent/detail/')}" + full.agentId;
                    var operation = "<a id='" + full.agentId + "' href='" + url + "'>" + full.agentName + "</a>";
                    return operation;
                }
                },
                {title: "客户数", "mData": "customerQuantity"},
                {title: "下级代理商数", "mData": "directAgentQuantity"},
                {title: "贡献度", "mData": "agentContribution"}
            ],
            "language": {
                "processing": "正在加载中",
                "lengthMenu": "每页显示 _MENU_ 条记录",
                "zeroRecords": "抱歉， 没有找到",
                "info": "从 _START_ 到 _END_, 共 _TOTAL_ 条数据",
                "infoEmpty": "暂无数据",
                "infoFiltered": "数据表中共 _MAX_ 条记录)",
                "zeroRecords": "当前暂无审核通过的代理",
                "search": "搜索:",
                "paginate": {
                    "first": "首页",
                    "previous": "上一页",
                    "next": "下一页",
                    "last": "尾页"
                }
            },
            "pagingType": "simple_numbers"
        });
    });
</script>