<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="selling.agent.bankcard">
    <resultMap id="bankcardVo" type="selling.sunshine.model.Bankcard">
        <result property="bankCardId" column="bank_card_id"></result>
        <result property="bankCardNo" column="bank_card_no"></result>
        <result property="preferred" column="preferred"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
        <association property="agent" column="agentId = agent_id"></association>
    </resultMap>

    <insert id="insert" parameterType="selling.sunshine.model.BankCard" useGeneratedKeys="false">
        INSERT INTO bank_card(bank_card_id, bank_card_no, preferred, block_flag, create_time, agent_id)
        VALUES (#{bankCardId}, #{bankCardNo}, #{preferred}, #{blockFlag}, #{creatAt}, #{agent.agengId})
    </insert>

    <select id="query" parameterType="java.util.Map" resultMap="bankcardVo">
        SELECT bank_card_id, bank_card_no, preferred, block_flag, create_time, agent_id
        FROM bank_card
        WHERE 1 = 1
        <if test="bankCardId != null and bankCardId != ''">
            AND bank_card_id = #{bankCardId}
        </if>
        <if test="bankCardNo != null and bankCardNo != ''">
            AND bank_card_no = #{bankCardNo}
        </if>
        <if test="preferred != null and preferred != ''">
            AND preferred = #{preferred}
        </if>
        <if test="blockFlag != null and blockFlag != ''">
            AND block_flag = #{blockFlag}
        </if>
        <if test="agentId != null and agentId != ''">
            AND agent_id = #{agentId}
        </if>
        <if test="rule != null and rule != ''">
            ORDER BY ${rule}
        </if>
    </select>

    <update id="canceldefault" parameterType="selling.sunshine.model.BankCard">
        UPDATE bank_card
        <set>
            preferred = FALSE
        </set>
        WHERE bank_card_id = #{bankCardId}
    </update>
</mapper>