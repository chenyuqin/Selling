<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="selling.customer">
    <resultMap id="addressVo" type="selling.sunshine.model.CustomerAddress">
        <result property="addressId" column="customer_address_id"></result>
        <result property="address" column="address"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <resultMap id="phoneVo" type="selling.sunshine.model.CustomerPhone">
        <result property="phoneId" column="customer_phone_id"></result>
        <result property="phone" column="phone"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <resultMap id="agentVo" type="selling.sunshine.model.Agent">
        <result property="agentId" column="agent_id"></result>
        <result property="name" column="agent_name"></result>
        <result property="gender" column="agent_gender"></result>
        <result property="phone" column="agent_phone"></result>
        <result property="address" column="agent_address"></result>
        <result property="wechat" column="agent_wechat"></result>
        <result property="password" column="agent_password"></result>
        <result property="granted" column="agent_granted"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
    </resultMap>

    <resultMap id="customerVo" type="selling.sunshine.model.Customer">
        <result property="customerId" column="customer_id"></result>
        <result property="name" column="customer_name"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
        <association property="address" column="customerId = customer_id" select="addressQuery"></association>
        <association property="phone" column="customerId = customer_id" select="phoneQuery"></association>
        <association property="agent" column="agentId = agent_id" select="agentQuery"></association>
    </resultMap>

    <select id="query" parameterType="java.util.Map" resultMap="customerVo">
        SELECT customer_id, customer_name, block_flag, create_time
        FROM customer
        WHERE 1 = 1
        <if test="customerId != null and customerId != ''">
            AND customer_id = #{customerId}
        </if>
        <if test="name != null and name != ''">
            AND customer_name = #{name}
        </if>
        <if test="blockFlag != null and blockFlag != ''">
            AND block_flag = #{blockFlag}
        </if>
        <if test="agentId != null and agentId != ''">
            AND agent_id = #{agentId}
        </if>
    </select>

    <insert id="insert" parameterType="selling.sunshine.model.Customer" useGeneratedKeys="false">
        INSERT INTO customer(customer_id, customer_name, agent_id, block_flag, create_time)
        VALUES (#{customerId}, #{name}, #{agent.agentId}, #{blockFlag}, #{createAt})
    </insert>

    <select id="addressQuery" parameterType="java.util.Map" resultMap="addressVo">
        SELECT customer_address_id, address, block_flag, create_time
        FROM customer_address
        WHERE customer_id = #{customerId}
        AND block_flag = 0
    </select>

    <select id="phoneQuery" parameterType="java.util.Map" resultMap="phoneVo">
        SELECT customer_phone_id, phone, block_flag, create_time
        FROM customer_phone
        WHERE customer_id = #{customerId}
        AND block_flag = 0
    </select>

    <select id="agentQuery" parameterType="java.util.Map" resultMap="agentVo">
        SELECT agent_id, agent_name, agent_gender, agent_phone, agent_address, agent_password, agent_wechat, agent_granted, block_flag, create_time
        FROM agent
        WHERE agent_id = #{agentId}
    </select>
</mapper>