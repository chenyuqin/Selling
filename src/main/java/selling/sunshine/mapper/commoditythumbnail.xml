<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="selling.goods.thumbnail">
    <resultMap id="thumbnailVo" type="selling.sunshine.model.GoodsThumbnail">
        <result property="thumbnailId" column="thumbnail_id"></result>
        <result property="path" column="thumbnail_path"></result>
        <result property="blockFlag" column="block_flag"></result>
        <result property="createAt" column="create_time"></result>
        <association property="goods" column="goodsId = goods_id"></association>
    </resultMap>

    <insert id="insert" parameterType="selling.sunshine.model.GoodsThumbnail" useGeneratedKeys="false">
        INSERT INTO goods_thumbnail(thumbnail_id, goods_id, thumbnail_path, block_flag, create_time)
        VALUES (#{thumbnailId}, #{goods.goodsId}, #{path}, #{blockFlag}, #{createAt})
    </insert>

    <insert id="insertBatch" parameterType="java.util.List" useGeneratedKeys="false">
        INSERT INTO goods_thumbnail(thumbnail_id, goods_id, thumbnail_path, block_flag, create_time)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.thumbnailId}, #{item.goods.goodsId}, #{item.path}, #{item.blockFlag}, #{item.createAt})
        </foreach>
    </insert>
</mapper>